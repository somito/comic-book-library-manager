@model ComicBookLibraryManagerWebApp.ViewModels.ComicBooksDeleteViewModel

@{
    ViewBag.Title = "Delete Comic Book";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the comic book @Model.ComicBook.DisplayText?
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    @Html.HiddenFor(m => m.ComicBook.RowVersion)
    @Html.HiddenFor(m => m.ComicBook.Series.Title)
    @Html.HiddenFor(m => m.ComicBook.IssueNumber)

    <div class="pad-top">
        <button type="submit" class="btn btn-danger btn-lg margin-right">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </button>
        <a href="@(Model.ComicBookHasBeenDeleted ? Url.Action("Index") : Url.Action("Detail", new { id = Model.ComicBook.Id }))" class="btn btn-warning btn-lg">
            <span class="glyphicon glyphicon-remove"></span> Cancel
        </a>
    </div>
}
